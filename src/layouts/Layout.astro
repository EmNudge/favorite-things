---
import { ViewTransitions } from 'astro:transitions';

export interface Props {
	title: string;
	product?: {
		description: string;
		image: string;
	}
}

const { title, product } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/png" href="/favicon.png" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<meta property="og:title" content={title}>
		<meta property="og:site_name" content="My Favorite Things">
		{product && <>
			<meta property="og:description" content={product.description}>
			<meta property="og:image" content={`/products/${product.image}`}>
		</>}
		<ViewTransitions />
	</head>
	<body>
		<main>
			<slot />
		</main>
		<footer>
			<div>None of these are affiliate links. I just like to share things.</div>
			<div>
				Inspiration: 
				<a href="https://aarohmankad.notion.site/Things-I-Love-36569f3b641f44139baa63288fea7c21">
					Things I Love
				</a> by <a href="https://www.aarohmankad.com/">
					Aaroh Mankad
				</a>
			</div>
		</footer>
	</body>
</html>
<style is:global>
	@keyframes fade-in {
		from {
			opacity: 0;
		}
	}

	@keyframes fade-out {
		to {
			opacity: 0;
		}
	}

	@keyframes slide-from-right {
		from {
			transform: translateX(30px);
		}
	}

	@keyframes slide-to-left {
		to {
			transform: translateX(-30px);
		}
	}

	:root {
		--accent: rgb(124, 58, 237);
		--accent-gradient: linear-gradient(
			45deg,
			var(--accent),
			#da62c4 30%,
			white 60%
		);
	}
	html {
		font-family: system-ui, sans-serif;
		background-color: #f6f6f6;
	}
	main,
	footer {
		margin: auto;
		padding: 1.5rem;
		max-width: 60ch;
	}
	footer {
		padding: 3rem;
		max-width: 60ch;
	}
	code {
		font-family: Menlo, Monaco, Lucida Console, Liberation Mono,
			DejaVu Sans Mono, Bitstream Vera Sans Mono, Courier New, monospace;
	}
	a {
		text-decoration: none;
	}
	h1 {
		font-size: 3rem;
		font-weight: 800;
		margin: 0;
	}
</style>
