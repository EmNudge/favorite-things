---
const className = "back-btn-" + Math.random().toString(16).slice(2);
---

<a href="/" class={`styled ${className}`}>
  <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" viewBox="0 0 24 24"><path d="M9 11l-4 4l4 4m-4-4h11a4 4 0 0 0 0-8h-1" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"></path></svg>
</a>

<script define:vars={{ className }}>
    const aTag = document.querySelector('.' + className);
    const hasNavigatedFromMainPage = Boolean(sessionStorage.getItem('navigation'));
    if (aTag && hasNavigatedFromMainPage) {
        aTag.href = '#';
        aTag.addEventListener('click', e => {
            e.preventDefault();
            history.back();
        });
    }
</script>


<style>
  a {
    text-decoration: none;
    background-image: linear-gradient(
        45deg,
        rgb(195, 67, 180),
        rgb(68, 11, 68)
    );
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    margin-right: 0.5rem;

    display: flex;
    align-items: center;
  }
  svg {
    height: 3em;
  }
</style>